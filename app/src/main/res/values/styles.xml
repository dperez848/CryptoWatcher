<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TitleCrypto">
        <item name="android:padding">@dimen/default_medium_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/default_text_extra_large_size</item>
    </style>
    <style name="TitleAlarmDetail">
        <item name="android:padding">@dimen/default_medium_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/default_text_large_size</item>
    </style>

    <style name="SettingsLinearBox">
        <item name="android:layout_marginBottom">@dimen/default_medium_size</item>
        <item name="android:layout_marginRight">@dimen/default_medium_size</item>
        <item name="android:layout_marginLeft">@dimen/default_medium_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/default_medium_size</item>
    </style>

    <style name="SettingsEditText">
        <item name="android:layout_marginRight">@dimen/default_medium_size</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/default_value</item>
        <item name="android:textSize">@dimen/default_x_large_size</item>

    </style>
</resources>